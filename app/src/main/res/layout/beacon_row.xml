<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/uuid_text"
        style="@style/MainTextViewTheme"
        android:text="Beacon"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true">

        <TextView
            android:id="@+id/major_text"
            style="@style/RowTextViewStyle"
            android:text="Beacon"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/minor_text"
            style="@style/RowTextViewStyle"
            android:layout_below="@id/major_text"
            android:text="Beacon"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/rssi_text"
            style="@style/RowTextViewStyle"
            android:layout_below="@id/minor_text"
            android:layout_alignParentLeft="true"
            android:text="Beacon"
            />

        <TextView
            android:id="@+id/beacon_name_text"
            style="@style/RowTextViewStyle"
            android:layout_below="@id/rssi_text"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/device_address"
            style="@style/RowTextViewStyle"
            android:layout_below="@id/beacon_name_text"
            android:layout_alignParentLeft="true"
            />

    </RelativeLayout>
</LinearLayout>