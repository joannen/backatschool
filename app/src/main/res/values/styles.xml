<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/deepBlue</item>
        <item name="colorPrimaryDark">@color/deepBlue</item>
        <item name="colorAccent">@color/flamingo</item>
    </style>

    <style name="ScanTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="MainTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pirPul</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="RowTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/deepBlue</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
